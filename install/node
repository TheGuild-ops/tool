echo "1 - Aleo - ðŸ¦„"

echo -e "Please choose carefully"
while read response 
 do
  case $response in
  [1])

    wget https://raw.githubusercontent.com/TheGuild-ops/tool/main/install/node | bash node
    break
  ;;
