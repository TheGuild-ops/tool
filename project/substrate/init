clear
echo "Pls choose chain"
echo [1] - Polkadot
echo [2] - Kusama
echo [3] - Parachein

while read chain
 do
  case $chain in
  [1])
        chain=polkadot
        token=dot
   break
  ;;
  [2])
        chain=kusama
        token=ksm
   break
  ;;
    [3])
        chain=parachein
        clear
        echo "What do you want to do?"
        echo [1] - Install
        echo [2] - Update
        echo [3] - ReInstall DB
   while read action
 do
  case $action in
##install
  [1])
    echo "Pls enter validator name"
    read name
    wget https://raw.githubusercontent.com/TheGuild-ops/tool/main/project/substrate/install -O install && bash install $chain $name $token
  break
  ;;
        
        token=ksm
   break
  ;;
  *)
   echo "Pls choose chain"
    echo [1] - Polkadot
    echo [2] - Kusama
    echo [3] - Parachein
  ;;
esac
done
clear
echo "What do you want to do?"
echo [1] - Install
echo [2] - Update
echo [3] - ReInstall DB

while read action
 do
  case $action in
##install
  [1])
    echo "Pls enter validator name"
    read name
    wget https://raw.githubusercontent.com/TheGuild-ops/tool/main/project/substrate/install -O install && bash install $chain $name $token
  break
  ;;
##Update
  [2])
    wget https://raw.githubusercontent.com/TheGuild-ops/tool/main/project/substrate/update -O update && bash update $chain $token
  break
  ;;
##Refresh
  [3])
        echo 3
  break
  ;;
  *)
   echo "Please, enter 1 or 2 or 3!"
  ;;
esac
done
