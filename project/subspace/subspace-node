NAME=${1}
RADDRESS=${2}

cat << EOF > /etc/systemd/system/subspace-node.service
[Unit]
Description=Subspace Node
After=network.target

[Service]
User=root
Type=simple
ExecStart=/bin/subspace-node \
--chain gemini-1 \
--base-path $(pwd)/data \
--execution wasm \
--pruning 1024 \
--keep-blocks 1024 \
--rpc-cors all \
--rpc-methods safe \
--unsafe-ws-external \
--validator \
--reserved-only \
$(wget -qO- https://raw.githubusercontent.com/cyberomanov/subspace/main/reserved.txt) \
--name $NAME
#       --port 21779 \
#       --ws-port 30593 \
#       --rpc-port 17601 \

Restart=on-failure
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
EOF
